<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_small">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_genre_label"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="@id/genre_item_title"
        app:layout_constraintEnd_toEndOf="@id/genre_item_title"
        app:layout_constraintTop_toTopOf="@id/genre_item_title"
        app:layout_constraintBottom_toBottomOf="@id/genre_item_title"/>

    <TextView
        android:id="@+id/genre_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small"
        android:paddingStart="@dimen/margin_small"
        android:paddingEnd="@dimen/margin_small"
        android:textSize="@dimen/text_size_small"
        android:textColor="#49A6EA"
        android:layout_gravity="center"
        tools:text="Adventure"/>

</androidx.constraintlayout.widget.ConstraintLayout>