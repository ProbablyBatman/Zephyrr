<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cast_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cast_list_item_image"
            android:layout_width="@dimen/people_recycler_poster_width"
            android:layout_height="@dimen/people_recycler_poster_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/cast_list_item_role"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/CardItemPeople"
            app:layout_constraintTop_toBottomOf="@id/cast_list_item_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/cast_list_item_actor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/CardItemPeople"
            app:layout_constraintTop_toBottomOf="@id/cast_list_item_role"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>