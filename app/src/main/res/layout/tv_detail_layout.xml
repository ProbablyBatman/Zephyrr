<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_detail_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants">

        <ProgressBar
            android:id="@+id/tv_detail_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

        <android.support.constraint.Guideline
            android:id="@+id/tv_detail_guideline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <FrameLayout
            android:id="@+id/tv_detail_background_image_container"
            android:layout_width="match_parent"
            android:layout_height="288dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/tv_detail_background_image"
                android:layout_width="match_parent"
                android:layout_height="288dp"
                android:scaleType="centerCrop"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="bottom"
                android:background="@drawable/scrim"/>

            <TextView
                android:id="@+id/tv_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/DetailTitleStyle"/>
        </FrameLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/tv_detail_poster_image_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_background_image_container">

            <ImageView
                android:id="@+id/tv_detail_poster_image"
                android:layout_width="108dp"
                android:layout_height="162dp"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/first_air_date_title"
            style="@style/TopInfoTitleStyle"
            app:layout_constraintLeft_toRightOf="@id/tv_detail_poster_image_container"
            app:layout_constraintStart_toEndOf="@id/tv_detail_poster_image_container"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_background_image_container"
            android:text="@string/first_aired_title"/>

        <TextView
            android:id="@+id/first_air_date"
            style="@style/TopInfoItemStyle"
            app:layout_constraintLeft_toRightOf="@id/first_air_date_title"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_background_image_container"
            app:layout_constraintStart_toEndOf="@id/first_air_date_title"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/last_or_next_air_date_title"
            style="@style/TopInfoTitleStyle"
            app:layout_constraintLeft_toRightOf="@id/tv_detail_poster_image_container"
            app:layout_constraintStart_toEndOf="@id/tv_detail_poster_image_container"
            app:layout_constraintTop_toBottomOf="@id/first_air_date"
            android:text="@string/last_aired_title"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/last_or_next_air_date"
            style="@style/TopInfoItemStyle"
            app:layout_constraintLeft_toRightOf="@id/last_or_next_air_date_title"
            app:layout_constraintTop_toBottomOf="@id/first_air_date"
            app:layout_constraintStart_toEndOf="@id/last_or_next_air_date_title"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_detail_status_title"
            style="@style/TopInfoTitleStyle"
            app:layout_constraintLeft_toRightOf="@id/tv_detail_poster_image_container"
            app:layout_constraintStart_toEndOf="@id/tv_detail_poster_image_container"
            app:layout_constraintTop_toBottomOf="@id/last_or_next_air_date"
            android:text="@string/status_title"/>

        <TextView
            android:id="@+id/tv_detail_status"
            style="@style/TopInfoItemStyle"
            app:layout_constraintLeft_toRightOf="@id/tv_detail_status_title"
            app:layout_constraintTop_toBottomOf="@id/last_or_next_air_date"
            app:layout_constraintStart_toEndOf="@id/tv_detail_status_title"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/number_of_episodes_title"
            style="@style/TopInfoTitleStyle"
            app:layout_constraintLeft_toRightOf="@id/tv_detail_poster_image_container"
            app:layout_constraintStart_toEndOf="@id/tv_detail_poster_image_container"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_status"
            android:text="@string/number_of_episodes_title"/>

        <TextView
            android:id="@+id/number_of_episodes"
            style="@style/TopInfoItemStyle"
            app:layout_constraintLeft_toRightOf="@id/number_of_episodes_title"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_status"
            app:layout_constraintStart_toEndOf="@id/number_of_episodes_title"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/number_of_seasons_title"
            style="@style/TopInfoTitleStyle"
            app:layout_constraintLeft_toRightOf="@id/tv_detail_poster_image_container"
            app:layout_constraintStart_toEndOf="@id/tv_detail_poster_image_container"
            app:layout_constraintTop_toBottomOf="@id/number_of_episodes"
            android:text="@string/number_of_seasons_title"/>

        <TextView
            android:id="@+id/number_of_seasons"
            style="@style/TopInfoItemStyle"
            app:layout_constraintLeft_toRightOf="@id/number_of_seasons_title"
            app:layout_constraintTop_toBottomOf="@id/number_of_episodes"
            app:layout_constraintStart_toEndOf="@id/number_of_seasons_title"
        app:layout_constraintEnd_toEndOf="parent"/>

        <android.support.constraint.Barrier
            android:id="@+id/tv_detail_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="number_of_seasons, tv_detail_poster_image_container"/>

        <TextView
            android:id="@+id/tv_detail_user_rating_title"
            style="@style/TopInfoTitleStyle"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_barrier"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_detail_user_rating"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:text="@string/user_rating_title"/>

        <TextView
            android:id="@+id/tv_detail_user_rating"
            style="@style/TopInfoItemStyle"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_barrier"
            app:layout_constraintLeft_toRightOf="@id/tv_detail_user_rating_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"/>

        <TextView
            android:id="@+id/tv_detail_runtime_title"
            style="@style/TopInfoTitleStyle"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_user_rating_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_detail_runtime"
            android:text="@string/runtime_title"/>

        <TextView
            android:id="@+id/tv_detail_runtime"
            style="@style/TopInfoItemStyle"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_user_rating_title"
            app:layout_constraintLeft_toRightOf="@id/tv_detail_runtime_title"
            app:layout_constraintRight_toLeftOf="@id/tv_detail_guideline"/>

        <TextView
            android:id="@+id/tv_detail_genres_title"
            android:layout_width="0dp"
            style="@style/TopInfoTitleStyle"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_user_rating_title"
            app:layout_constraintLeft_toRightOf="@id/tv_detail_guideline"
            app:layout_constraintRight_toLeftOf="@id/tv_detail_genres"/>

        <TextView
            android:id="@+id/tv_detail_genres"
            style="@style/TopInfoItemStyle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_detail_genres_title"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_user_rating_title"/>

        <TextView
            android:id="@+id/tv_detail_overview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_medium"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_genres"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/text_size_small"
            android:lineSpacingMultiplier="1.25"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/tv_detail_cast_members_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_overview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>