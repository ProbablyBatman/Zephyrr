    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:titleTextStyle">@style/DayNightActionBar</item>-->
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="actionBarPopupTheme">@style/PopUpMenu</item>
        <item name="colorSurface">@android:color/holo_blue_bright</item>
    </style>

    <style name="AppTheme.ActionBarStyle.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PopUpMenu">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TopInfoTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TopInfoItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="CardItemPeople">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:minLines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="DetailTitleStyle">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
